# ==========================================================
# IoT Greenhouse - Environment Variables
# ==========================================================
# Copy this file to .env and configure your values

# ==========================================================
# ESP32 Configuration
# ==========================================================
# IP address of your ESP32 device on the local network
ESP32_IP=192.168.0.87
ESP32_PORT=8080

# ==========================================================
# Greenhouse Configuration
# ==========================================================
# Your greenhouse ID from the database (UUID)
# Optional if FETCH_CONFIG_FROM_BACKEND=true (will auto-detect)
GREENHOUSE_ID=

# Plant type for optimal moisture settings
# Options: default, tomato, lettuce, pepper, basil, strawberry, cucumber, herbs
# Optional if FETCH_CONFIG_FROM_BACKEND=true (uses active plant from database)
PLANT_TYPE=default

# Target soil moisture percentage (AI will maintain this level)
# Optional if FETCH_CONFIG_FROM_BACKEND=true (uses plant settings from database)
TARGET_MOISTURE=60

# ==========================================================
# Irrigation Parameters
# ==========================================================
# Duration of each pump pulse in seconds
PULSE_DURATION=0.5

# Wait time between pulses in seconds (also used as check interval)
PULSE_WAIT=60

# Maximum number of pulses in a single irrigation session
MAX_PULSES=20

# ==========================================================
# Auto-Start Monitoring
# ==========================================================
# Set to 'true' to automatically start monitoring on service startup
AUTO_START_MONITOR=false

# Set to 'true' to automatically fetch greenhouse config from backend
# This gets the active plant's moisture requirements from the database
# When true: GREENHOUSE_ID, PLANT_TYPE, TARGET_MOISTURE are auto-detected
# Still requires ESP32_IP to be set
FETCH_CONFIG_FROM_BACKEND=true

# ==========================================================
# Database (for docker-compose)
# ==========================================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# ==========================================================
# Service URLs (for docker-compose)
# ==========================================================
BACKEND_URL=http://api:5000
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_AI_URL=http://localhost:5001

