generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Sensor {
  id        Int      @id @default(autoincrement())
  air_temperature Float
  air_humidity   Float
  soil_moisture  String
  soil_temperature Float
  light_intensity Float
  water_level Float
  water_reserve Float
  timecreated DateTime @default(now())
}
